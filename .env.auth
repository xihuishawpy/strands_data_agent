# ChatBI认证系统配置文件
# 请根据您的环境修改以下配置

# JWT配置（必需）
AUTH_JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-12345678901234567890

# 会话配置
AUTH_SESSION_TIMEOUT=3600
AUTH_SESSION_CLEANUP_INTERVAL=300
AUTH_MAX_SESSIONS_PER_USER=5

# 登录安全配置
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
AUTH_LOCKOUT_ENABLED=true

# 密码配置
AUTH_PASSWORD_MIN_LENGTH=6
AUTH_PASSWORD_MAX_LENGTH=128
AUTH_REQUIRE_PASSWORD_COMPLEXITY=false
AUTH_PASSWORD_HISTORY_COUNT=5

# 权限配置
PERM_DEFAULT_SCHEMA_ACCESS=public,common
PERM_PUBLIC_SCHEMAS=public
PERM_ADMIN_SCHEMAS=admin,system
PERM_SCHEMA_ISOLATION_ENABLED=true
PERM_STRICT_PERMISSION_CHECK=true
PERM_INHERIT_ADMIN_PERMISSIONS=true

# 权限缓存配置
PERM_CACHE_ENABLED=true
PERM_CACHE_TTL=300
PERM_CACHE_SIZE=1000

# 审计配置
AUTH_ENABLE_AUDIT_LOGGING=true
AUTH_AUDIT_LOG_RETENTION_DAYS=90

# 安全配置
AUTH_ENABLE_CSRF_PROTECTION=true
AUTH_ENABLE_SESSION_FIXATION_PROTECTION=true
AUTH_SECURE_COOKIES=false

# Web配置
SECRET_KEY=your-web-secret-key-change-this-in-production-abcdefghijklmnopqrstuvwxyz

# API配置（可选）
DASHSCOPE_API_KEY=your-dashscope-api-key-here