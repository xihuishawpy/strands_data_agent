# 数据库配置
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=your_database
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# 或者使用MySQL
# DATABASE_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=your_database
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password

# DashScope API配置
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 模型配置
LLM_MODEL_NAME=qwen-max
LLM_CODER_MODEL=qwen-coder-plus
EMBEDDING_MODEL=text-embedding-v3
RERANK_MODEL=gte-rerank-v2

# Web服务配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 缓存和存储配置
KNOWLEDGE_BASE_PATH=./data/knowledge_base
SCHEMA_CACHE_TTL=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/chatbi.log

# RAG知识库配置
RAG_ENABLED=true
RAG_SIMILARITY_THRESHOLD=0.6
RAG_CONFIDENCE_THRESHOLD=0.8
RAG_MAX_EXAMPLES=3

# 认证配置
AUTH_SESSION_TIMEOUT=3600
AUTH_SESSION_CLEANUP_INTERVAL=300
AUTH_MAX_SESSIONS_PER_USER=5
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
AUTH_LOCKOUT_ENABLED=true
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_MAX_LENGTH=128
AUTH_REQUIRE_PASSWORD_COMPLEXITY=true
AUTH_JWT_SECRET_KEY=your_jwt_secret_key_here_please_change_this
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_EXPIRATION=3600
AUTH_ENABLE_CSRF_PROTECTION=true
AUTH_ENABLE_AUDIT_LOGGING=true

# 权限配置
PERM_DEFAULT_SCHEMA_ACCESS=
PERM_ADMIN_SCHEMAS=
PERM_PUBLIC_SCHEMAS=
PERM_SCHEMA_ISOLATION_ENABLED=true
PERM_STRICT_PERMISSION_CHECK=true
PERM_INHERIT_ADMIN_PERMISSIONS=true
PERM_CACHE_ENABLED=true
PERM_CACHE_TTL=300
